# Import necessary libraries
import time
import board
import neopixel

# Initialize NeoPixels
pixels = neopixel.NeoPixel(board.NEOPIXEL, 3, brightness=0.5, auto_write=False)

# Function to flash NeoPixels
def flash_neopixels():
    while True:
        # Set colors for the first three NeoPixels
        pixels[0] = (255, 0, 0)  # Red
        pixels[1] = (0, 255, 0)  # Green
        pixels[2] = (0, 0, 255)  # Blue
        pixels.show()
        time.sleep(0.5)
        
        # Turn off the first three NeoPixels
        pixels[0] = (0, 0, 0)
        pixels[1] = (0, 0, 0)
        pixels[2] = (0, 0, 0)
        pixels.show()
        time.sleep(0.5)

# Call the function to flash NeoPixels
flash_neopixels()
